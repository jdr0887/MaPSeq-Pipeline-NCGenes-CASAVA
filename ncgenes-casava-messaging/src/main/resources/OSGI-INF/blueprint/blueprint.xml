<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0" default-activation="eager">

  <reference id="connectionFactory" interface="javax.jms.ConnectionFactory" />

  <reference id="NCGenesCASAVAWorkflowBeanService" interface="edu.unc.mapseq.workflow.WorkflowBeanService" component-name="NCGenesCASAVAWorkflowBeanService" />

  <bean id="NCGenesCASAVAMessageListener" class="edu.unc.mapseq.messaging.ncgenes.casava.CASAVAMessageListener">
    <property name="workflowBeanService" ref="NCGenesCASAVAWorkflowBeanService" />
    <property name="workflowName" value="NCGenesCASAVA" />
  </bean>

  <bean id="NCGenesCASAVAMessagingService" class="edu.unc.mapseq.messaging.ncgenes.casava.NCGenesCASAVAMessageService"
    init-method="start" destroy-method="stop" activation="eager">
    <property name="connectionFactory" ref="connectionFactory" />
    <property name="messageListener" ref="CASAVAMessageListener" />
    <property name="destinationName" value="queue/ncgenes.casava" />
  </bean>

</blueprint>
